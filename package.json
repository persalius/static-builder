{
  "name": "static-builder",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node src/scripts/dev.js",
    "build": "node src/scripts/build.js",
    "preview": "node src/scripts/preview.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "dotenv": "^16.6.1",
    "sass": "^1.93.2",
    "vite": "^7.1.9"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  }
}
